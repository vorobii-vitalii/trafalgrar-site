section.articles-section
    background-color #ffffff

.articles-section__row
    display flex
    flex-direction column
    position relative
    align-items center
    overflow: hidden;
    padding 0 240px 201px 240px

    @media (max-width 1600px)
        padding 0 25px 201px 25px

    @media (max-width 1500px)
        padding-bottom 90px

    @media (max-width 1200px)
        padding-bottom 50px

.articles-bubble-figure
    position absolute
    right 0
    top 0

    @media (max-width 1050px)
        display none 
    
    img 
        display block
        object-fit cover

.articles-figure1
    position absolute
    top 150px
    left 190px

    @media (max-width 1050px)
        display none 

    img 
        display block
        object-fit cover

.articles-figure2
    position absolute
    bottom -43px
    right 92px

    @media (max-width 1050px)
        display none 

    img 
        display block
        object-fit cover

h2.articles-section__title
    font-style: normal;
    font-weight: bold;
    font-size: 36px;
    line-height: 156%
    color: #000000
    text-align center

hr.articles-section__divider
    padding 0
    margin 0
    display block
    width: 56px;
    height: 2px;
    background: #000000;
    border-radius: 5px;

.articles-section__items
    display flex
    z-index 2
    flex-direction row
    padding 79px 0 69px 0

    @media (max-width 1200px)
        display grid
        grid-template-columns repeat(2, 350px)
        justify-content center 
        align-items center
        grid-gap 30px

    @media (max-width 780px)
        grid-template-columns repeat(1, 350px)

    @media (max-width 370px)
        grid-template-columns 100%

.article-section__item
    background: #FFFFFF;
    border-radius 20px
    box-shadow: 10px 40px 50px rgba(229, 233, 246, 0.4);
    margin-right 34px

    @media (max-width 1200px)
        margin-right 0

    &:last-child
        margin-right 0


.article-section__article-image
    display block
    height 240px
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    width 100%
    object-fit cover

.article-section__article-content
    padding 24px 51px 35px 33px

    @media (max-width 370px)
        padding: 25px 15px;

h4.article-section__article-title
    font-style: normal;
    font-weight: bold;
    font-size: 21px;
    line-height: 152%
    color: #000000
    padding 0 0 12px 0
    margin 0

p.article-section__article-text
    font-style: normal;
    font-weight: 300;
    font-size: 16px;
    line-height: 175%
    color: #7D7987
    margin 0
    padding 0 0 25px 0

a.article-section__article-read-more
    display flex
    flex-direction row
    text-decoration none
    outline none

    span
        font-style: normal;
        font-weight: 600;
        font-size: 17px;
        line-height: 165%
        color: #4089ED;

    img
        display block
        margin-left 15px