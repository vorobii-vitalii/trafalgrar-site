section.download-apps-section
    background #ffffff

.download-apps-section__row
    display flex
    flex-direction row
    padding 0 164px 251px 280px

    @media (max-width 1600px)
        padding-left: 25px;
        justify-content: center;
        padding-right: 25px;

    @media (max-width 1500px)
        padding-bottom 90px

    @media (max-width 1200px)
        padding-bottom 50px

    @media (max-width 800px)
        flex-direction column
        align-items center
    
.download-apps-section__info
    display flex
    flex-direction column
    align-items flex-start
    margin-right 71px
    padding-bottom 23px
    padding-top 36px

    @media (max-width 1200px)
        padding-top 0

    @media (max-width 800px)
        align-items center
        text-align center
        margin-right 0

h2.download-apps-section__title
    max-width 254px
    font-style: normal;
    font-weight: bold;
    font-size: 36px;
    line-height: 133%;
    color: #000000
    margin 0
    padding 0 0 30px 0

    @media (max-width 800px)
        max-width 100%  

hr.download-apps-section__divider
    display block
    width: 56px;
    height: 2px;
    background: #000000;
    border-radius: 6px;
    margin 0
    padding 0

p.download-apps-section__text
    ont-style: normal;
    font-weight: 300;
    font-size: 18px;
    line-height: 167%
    color: #7D7987
    margin 0
    padding 31px 0 40px 0

.download-apps-section__btn img 
    margin-left 15px

.download-apps-section__image
    flex-basis 665px
    flex-basis: 50%;
    flex-shrink: 0;

    @media (max-width 1200px)
        width 50%
        flex-basis 50%
        flex-shrink 0

        img
            display block
            width 100%

    @media (max-width 800px)
        padding-top 30px
        flex-basis 0px
        width 75%

    @media (max-width 500px)
        width 100%